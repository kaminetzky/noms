<div class="container">

  <div class="header">
    <h1>Logmeal</h1>
  </div>

  <div class="stat-block-container">
    <h2>Total</h2>

    <div class="stat-block">
      <h3>Meals</h3>
      <p><%= @meal_count %></p>
    </div>

    <div class="stat-block">
      <h3>Foods</h3>
      <p><%= @food_count %></p>
    </div>
  </div>

  <div class="stat-block-container">
    <h2>Today</h2>

    <div class="stat-block">
      <h3>Calories</h3>
      <p><%= @meals_today.sum(&:calories).round %></p>
    </div>

    <div class="stat-block">
      <h3>Protein</h3>
      <p><%= @meals_today.sum(&:protein).round %></p>
    </div>
  </div>
  
  <div class="link-block-container">
    <div class="link-block">
      <h3>Meals</h3>
      <div class="link-buttons">
        <%= link_to "New", new_meal_path %>
        <%= link_to "All", meals_path %>
        <%= link_to "Last", @meal_last %>
      </div>
    </div>
    
    <div class="link-block">
      <h3>Foods</h3>
      <div class="link-buttons">
        <%= link_to "New", new_food_path %>
        <%= link_to "All", foods_path %>
        <%= link_to "Last", @food_last %>
      </div>
    </div>
  </div>

</div>
