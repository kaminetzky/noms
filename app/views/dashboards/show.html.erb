<div class="container">

  <div class="header">
    <h1>NOMS</h1>
  </div>

  <div class="block stat-block-with-title">
    <h2 class="block-title">Today</h2>

    <div class="stat-block-multiple">
      <div class="stat-block">
        <h3>Calories</h3>
        <p><%= @calories_today %></p>
      </div>
      <div class="stat-block">
        <h3>Protein</h3>
        <p><%= @protein_today %></p>
      </div>
    </div>
  </div>

  <div class="block stat-block-with-title">
    <div class="header-container">
      <%= link_to @meal_last, class: "block-title-link" do %>
        <h2 class="block-title">Last meal</h2>
        <div class="icons">
          <%= icon('fa-regular', 'angle-right', class: "icon-default") %>
          <%= icon('fa-regular', 'arrow-right', class: "icon-hover") %>
        </div>
      <% end %>
      <h2 class="food-name"><%= @meal_last.food.name %></h2>
    </div>

    <div class="stat-block-multiple">
      <div class="stat-block">
        <h3>Calories</h3>
        <p><%= @meal_last.calories.round %></p>
      </div>
      <div class="stat-block">
        <h3>Protein</h3>
        <p><%= @meal_last.protein.round %></p>
      </div>
    </div>
  </div>
  
  <div class="link-block-container">
    <div class="block link-block">
      <h3>Meals</h3>
      <div class="link-buttons">
        <%= link_to new_meal_path do %>
          <%= icon('fa-regular', 'plus', class: "icon-default") %>
          <p>New</p>
        <% end %>
        <%= link_to meals_path do %>
          <%= icon('fa-regular', 'list', class: "icon-default") %>
          <p>All</p>
        <% end %>
      </div>
    </div>
    
    <div class="block link-block">
      <h3>Foods</h3>
      <div class="link-buttons">
        <%= link_to new_food_path do %>
          <%= icon('fa-regular', 'plus', class: "icon-default") %>
          <p>New</p>
        <% end %>
        <%= link_to foods_path do %>
          <%= icon('fa-regular', 'list', class: "icon-default") %>
          <p>All</p>
        <% end %>
      </div>
    </div>
  </div>

</div>
