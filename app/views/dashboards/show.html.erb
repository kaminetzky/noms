<div class="container">

  <div class="header">
    <h1>NOMS</h1>
  </div>

  <div class="block stat-block-with-title">
    <div class="header-container">
      <h2 class="block-title">Last meal</h2>
      <h2 class="food-name"><%= @meal_last.food.name %></h2>
    </div>

    <div class="stat-block-multiple">
      <div class="stat-block">
        <h3>Calories</h3>
        <p><%= @meal_last.calories.round %></p>
      </div>
      <div class="stat-block">
        <h3>Protein</h3>
        <p><%= @meal_last.protein.round %></p>
      </div>
    </div>
  </div>

  <div class="block stat-block-with-title">
    <h2 class="block-title">Today</h2>

    <div class="stat-block-multiple">
      <div class="stat-block">
        <h3>Calories</h3>
        <p><%= @calories_today %></p>
      </div>
      <div class="stat-block">
        <h3>Protein</h3>
        <p><%= @protein_today %></p>
      </div>
    </div>
  </div>
  
  <div class="link-block-container">
    <div class="block link-block">
      <h3>Meals</h3>
      <div class="link-buttons">
        <div class="link-buttons-row">
          <%= link_to "New", new_meal_path %>
        </div>
        <div class="link-buttons-row">
          <%= link_to "All", meals_path %>
          <%= link_to "Last", @meal_last %>
        </div>
      </div>
    </div>
    
    <div class="block link-block">
      <h3>Foods</h3>
      <div class="link-buttons">
        <div class="link-buttons-row">
          <%= link_to "New", new_food_path %>
        </div>
        <div class="link-buttons-row">
          <%= link_to "All", foods_path %>
          <%= link_to "Last", @food_last %>
        </div>
      </div>
    </div>
  </div>

</div>
