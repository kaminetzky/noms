<div class="container">
  <%= link_to root_path, class: "header-link" do %>
    <h1>Noms</h1>
  <% end %>
  
  <div class="block">
    <h2>Foods</h2>

    <ul>
      <% @foods.each do |food| %>
        <li>
          <div class="icons">
            <%= icon('fa-solid', 'angle-right', class: "icon-default") %>
            <%= icon('fa-solid', 'arrow-right', class: "icon-hover") %>
          </div>
          <%= link_to food.name, food %>
        </li>
      <% end %>
    </ul>
  </div>

</div>